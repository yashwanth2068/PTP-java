import java.util.Scanner;
class Numpat{
	public static void main(String...args){
	Scanner s = new Scanner(System.in);
	int n=s.nextInt();
		for (int i =0;i<n;i++){
			for (int j=i;j>0;j--){

				System.out.print(i);
			}
			for (int k= i; k>i; k--){
				System.out.print(" ");
			}
			System.out.println("");
		}
		for (int i =1;i<n;i++){
			for (int j=0;j<(n-1)-i;j++){

				System.out.print(i);
			}
			for (int k= 0; k<=i; k++){
				System.out.print(" ");
			}
			System.out.println("");
		}
	}
}